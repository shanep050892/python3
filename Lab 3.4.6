hat_list = [1, 2, 3, 4, 5]

# Creates user input to allow the middle number to be replaced.

user_adjustment = int(input("Please enter a number here:"))

# Code to replace middle element within list.

middle_element = len(hat_list) // 2
hat_list [middle_element] = user_adjustment

# Code that removes last element from the list.

hat_list.pop()

# Code that prints length of the list.

print(hat_list)

print ("Length of the list:", len(hat_list))
